<h1><%= @vacation.name %></h1>

<%= link_to "Add a destination", :action => 'add', :id => @vacation.id %>
<ol id="destination_list">
	<%= render :partial => 'destination', :collection => @vacation.destinations %>
</ol>
<%= sortable_element 'destination_list',
	:url => {:action => 'sort', :id => @vacation },
	:complete => visual_effect(:highlight, 'destination_list' )
%>
<%= link_to 'Back to Vacations', :action => 'list' %>