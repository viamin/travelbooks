<h3>Search Results</h3>
<p><%= h(@message) if (@people.nil? || @people.empty?) %></p>
<ul class="results_list">
<% @people.each do |p| %>
	<li><%= link_to( image_tag(p.main_photo.url).concat("&nbsp;&nbsp;#{p.display_name}"), {:controller => 'user', :action => 'show', :id => p.id}) %></li>
<% end unless (@people.nil? || @people.empty?) %>
</ul>
