<h1>Upload a photo</h1>

<%= form_tag({:action => 'prepare'}, {:multipart => true, :class => 'gen_form'}) do %>
	<%= render :partial => 'form' %>
	<%= hidden_field_tag 'photo[person_id]', @person.id, {:id => 'photo_person_id'} %>
	<%= hidden_field_tag 'photo[photo_type]', Photo::MAIN, {:id => 'photo_photo_type'} %>
	<label for="photo_submit">&nbsp;</label><%= submit_tag 'Upload' %>
<% end %>

<%= link_to "Back", :action => 'list', :id => @person %>