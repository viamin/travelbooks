<div class="si_photo">
	<%= image_tag "", :alt => @item.name %>
</div>
<div class="sale_item">
	<p><%= @item.name %></p>
	<p><%= @item.description %></p>
	<p><%= number_to_currency(@item.price) %></p>
</div>
<div class="si_sale">
	<%= link_to "Buy this Book", :action => 'purchase', :id => @item.id %>
</div>

