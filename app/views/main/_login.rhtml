<div id="loginbox">
	<% form_for :person, @person, :url => {:controller => 'user', :action => 'login'} do |f| %>
	<label for="person_email">Email:</label>
	<%= f.text_field :email, {:size => '11', :class => "txinput"} %>
	<label for="person_password">Password:</label>
	<%= f.password_field :password, {:size => '11', :class => "txinput"} %>
	<%= submit_tag 'Login', {:id => 'lgnbut'} %>
	<% end -%>
	<%= image_tag "openid_small_logo.png", :id => 'openidicon' %>
</div>