<div id="loginbox">
	<% form_for :person, @person, :url => {:action => :login} do |f| %>
	<label for="person_login">Login</label>
	<%= f.text_field :login, {:size => '11'} %><br />
	<label for="person_password">Password</label>
	<%= f.password_field :password, {:size => '11'} %><br />
	<%= submit_tag 'Login' %>
	<% end -%>
</div>